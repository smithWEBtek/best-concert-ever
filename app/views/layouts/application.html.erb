<!DOCTYPE html>
<html>
  <head>
    <title>BestConcertEver</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application', 'concerts' %>

  </head>

  <body>

    <%= content_tag(:div, flash[:error].join("<br>").html_safe, :id => "flash_error") if flash[:error] %>
    <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
    <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>

		<%= link_to 'Home', root_path %> |
		<%= link_to 'All Concerts', concerts_path, id: 'all-concerts' %>

		<hr> 
		<div id="concert-data">... concerts should appear here ....</div>

		<hr>


    <%= yield %>
    <% if user_signed_in? %>
       <li>Signed in as <%= current_user.email %></li>
       <li><%= link_to "Add a Concert", new_concert_path %></li>
        <li><%= link_to 'My Concert Reviews', user_path(current_user) %></li>
       <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
    <% else %>
       <li><%= link_to 'Sign in', new_user_session_path %></li>
       <li><%= link_to 'Sign up', new_user_registration_path %></li>
    <% end %>

  </body>
</html>
